@model IEnumerable<UserViewModel>

<h1>Users</h1>
<hr />
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (UserViewModel user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <form asp-controller="User" asp-action="ViewUserDetails">
                        <input type="submit" value="View Details" class="btn btn-primary" />
                        <input type="hidden" asp-for="@user.Id" name="userId" class="form-control" />
                    </form>
                </td>
                <td>
                    <form asp-controller="User" asp-action="DeleteUser">
                        <input type="submit" value="View Details" class="btn btn-primary" />
                        <input type="hidden" asp-for="@user.Id" name="userId" class="form-control" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


